@model JtsAutoShopWeb.Models.TicketModel
<div id="deleteModalDialog" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <p>Problem With Delete!</p>
                <button type="button" class="close" onclick="closeModal()" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Product: @Model.ProdName<br>Item#: @Model.ProdId<br>Is currently in active shopping carts. To remove this it will need to be uncarted!</p>
            </div>
            <div class="modal-footer">
                <span><a class="btn btn-danger" asp-action="DeleteProduct" asp-route-prodId="@Model.ProdId" asp-route-forceDelete="true">Yes, forcibly delete!</a> <a href="#" class="btn btn-light" onclick="closeModal()">No, Cancel</a></span>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function closeModal() {
        $("#deleteModalDialog").hide();
    }
</script>